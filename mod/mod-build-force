#ifndef MOD_MOD_BUILD_FORCE
#define MOD_MOD_BUILD_FORCE

#include <brep/types>
#include <brep/utility>

#include <mod/options>
#include <mod/database-module>

namespace brep
{
  class build_force: public database_module
  {
  public:
    build_force () = default;

    // Create a shallow copy (handling instance) if initialized and a deep
    // copy (context exemplar) otherwise.
    //
    explicit
    build_force (const build_force&);

    virtual bool
    handle (request&, response&);

    virtual const cli::options&
    cli_options () const
    {
      return options::build_force::description ();
    }

  private:
    virtual void
    init (cli::scanner&);

  private:
    shared_ptr<options::build_force> options_;
  };
}

#endif // MOD_MOD_BUILD_FORCE
